<Window x:Class="PSCF_Ethernet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSCF_Ethernet"
        mc:Ignorable="d"
        Title="POLSLshark" Height="450" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="184" Margin="10,36,0,0" VerticalAlignment="Top" Width="441" x:Name="trafficBox"/>
        <Button Content="Receive traffic" HorizontalAlignment="Left" Margin="456,10,0,0" VerticalAlignment="Top" Width="156" Click="ReceiveTraffic_Click" Height="48" FontSize="22"/>
        <Label Content="Traffic Monitor" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <Label Content="TCP Packet Count" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="21" Margin="10,251,0,0" VerticalAlignment="Top" Width="106" x:Name="tcpBox"/>
        <Label Content="UDP Packet Count" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="21" Margin="10,303,0,0" VerticalAlignment="Top" Width="106" x:Name="udpBox"/>
    </Grid>
</Window>
